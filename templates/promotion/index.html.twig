{% extends 'base.html.twig' %}

{% block title %}Promotion index{% endblock %}

{% block body %}
    <h1>Promotion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Texte</th>
                <th>Date_debut</th>
                <th>Date_fin</th>
                <th>Remise</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.id }}</td>
                <td>{{ promotion.texte }}</td>
                <td>{{ promotion.dateDebut }}</td>
                <td>{{ promotion.dateFin }}</td>
                <td>{{ promotion.remise }}</td>
                <td>
                    <a href="{{ path('promotion_show', {'id': promotion.id}) }}">show</a>
                    <a href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('promotion_new') }}">Create new</a>
{% endblock %}
